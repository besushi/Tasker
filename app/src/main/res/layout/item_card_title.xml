<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        
>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



     <android.support.v7.widget.AppCompatImageView
             android:layout_margin="3dp"
             android:id="@+id/ideatypeicon"
             android:src="@drawable/idea_lamp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
     />

    <TextView
            android:id="@+id/title"
            android:text="sdfsdfdfs"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_alignBaseline="@id/ideatypeicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ideatypeicon"
           />


    <TextView
            android:text="100"
            android:background="@drawable/circle_shape"
            android:gravity="center"

            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_margin="2dp"
            android:layout_height="48dp"/>



    <TextView
             android:text="dsafdsfsdafsdfsadfsdfsdfsdaf"
             android:id="@id/description"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:layout_toEndOf="@id/ideatypeicon"
             android:layout_marginStart="8dp"
    android:layout_below="@id/title"/>




</RelativeLayout>

</android.support.v7.widget.CardView>